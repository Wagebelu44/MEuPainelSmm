{% include 'header.twig' %}

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      {% if errorText %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">×</button>
          {{ errorText }}
        </div>
      {% endif %}
      {% if successText %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">×</button>
          {{ successText }}
        </div>
      {% endif %}

      <div class="well">
        <form method="post" action="">
          <div class="form-group">
            <label for="username" class="control-label">{{ lang['signup.name'] }}</label>
            <input type="text" class="form-control" name="name" value="{{ data['name'] }}">
          </div>
          <div class="form-group">
            <label for="username" class="control-label">{{ lang['signup.email'] }}</label>
            <input type="text" class="form-control" name="email" value="{{ data['email'] }}">
          </div>
          <div class="form-group">
            <label for="username" class="control-label">{{ lang['signup.username'] }}</label>
            <input type="text" class="form-control" name="username" value="{{ data['username'] }}">
          </div>
          <div class="form-group">
            <label for="username" class="control-label">{{ lang['signup.telephone'] }}</label>
            <input type="text" class="form-control" name="telephone" value="{{ data['telephone'] }}">
          </div>
          <div class="form-group">
            <label for="password" class="control-label">{{ lang['signup.password'] }}</label>
            <input type="password" class="form-control" name="password">
          </div>
          <div class="form-group">
            <label for="password" class="control-label">{{ lang['signup.confirm'] }}</label>
            <input type="password" class="form-control" name="password_again">
          </div>

          
<div class="checkbox">
                 <input type="checkbox" id="accept_terms_text" class="terms-accept-checkbox" name="terms">
                 <label class="checkbox" for="accept_terms_text">
                    {{ lang['signup.accept_terms_text'] }}
                 </label>
               </div>

          {% if captcha %}
            <div class="form-group">
              <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
            </div>
          {% endif %}

            <button type="submit" class="btn btn-primary click">{{ lang['signup.button'] }}</button>
        </form>
      </div>
    </div>
  </div>
</div>


{% include 'footer.twig' %}

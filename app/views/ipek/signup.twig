{% include 'header.twig' %}

<div class="inner-page">
  <section>
    <div class="container">
      <div class="row justify-content-center register-panel">
        <div class="col-lg-7">
          <div class="card bg-white">
            <div class="card-header">
              <div class="card-title">
               Üye Ol
                <small>Hemen Ücretsiz Üye Olarak Aramıza Katıl!</small>
              </div>
            </div>
            
            <div class="card-body">
              <form  action="" method="post">
                    {% if errorText %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ errorText }}
        </div>
      {% endif %}
      {% if successText %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ successText }}
        </div>
      {% endif %}
                  <div class="form-group">
                  <label for="name" class="control-label">Ad Soyad</label>
                  <input type="text" class="form-control" id="email" value="" name="name" placeholder="Ad Soyad">
                </div>
                
                                                <div class="form-group">
                  <label for="username" class="control-label">Kullanıcı Adı</label>
                  <input type="text" class="form-control" id="username" value="" name="username" placeholder="Kullanıcı Adı">
                </div>
                                <div class="form-group">
                  <label for="email" class="control-label">Email</label>
                  <input type="email" class="form-control" id="email" value="" name="email" placeholder="E-Mail">
                </div>
                <div class="form-group">
                  <label for="number" class="control-label">Telefon Numarası</label>
                  <input type="number" class="form-control" id="telephone" value="" name="telephone" placeholder="Telefon Numarası">
                </div>
                                <div class="form-group">
                  <label for="password" class="control-label">Şifre</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Şifre">
                </div>
                <div class="form-group">
                  <label for="confirm" class="control-label">Şifre (Tekrar)</label>
                  <input type="password" class="form-control" id="confirm" name="password_again" placeholder="Şifre (Tekrar)">
                </div>
                                  
                                                  <div class="form-group">
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" class="terms-accept-checkbox" name="terms"> Okudum Ve Kabul Ediyorum <a href="/terms" target="_blank">Kullanım Sözleşmesi</a>
                      </label>
                    </div>
                  </div>
                
              
          {% if captcha %}
            <div class="form-group">
              <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
            </div>
          {% endif %}
          
                <button type="submit" class="btn btn-green">Üye Ol</button>
                <span class="pull-right pull-right-middle">Zaten Üye Misin? <a href="/auth">Giriş Yap</a></span>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

          <script src='https://www.google.com/recaptcha/api.js?hl=en'></script>
    	</section>
</div>




{% include 'footer.twig' %}

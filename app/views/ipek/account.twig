{% include 'header.twig' %}


<div class="inner-page">
  <section>
    <div class="container">
      <div class="row">
        <div class="col-lg">
            
      {% if error %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ errorText }}
        </div>
      {% endif %}
      {% if success %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ successText }}
        </div>
      {% endif %}
          		  <div class="card bg-white">
            <div class="card-header">
              <div class="card-title">Hesap Ayarları</div>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label for="username" class="control-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" id="username" value="{{ user['username'] }}" readonly>
              </div>
              
                   <form method="post" action="account">
                            <div class="form-group">
                <label for="current" class="control-label">Güncel Şifre</label>
                <input type="password" class="form-control" id="current" name="current_password">
              </div>
              <div class="form-group">
                <label for="new" class="control-label">Yeni Şifre</label>
                <input type="password" class="form-control" id="new" name="password">
              </div>
              <div class="form-group">
                <label for="confirm" class="control-label">Yeni Şifre (Tekrar)</label>
                <input type="password" class="form-control" id="confirm" name="confirm_password">
              </div>

             
              <button type="submit" class="btn btn-green">Şifremi Güncelle</button>
            </form>
            </div>
          </div>
        </div>

          			

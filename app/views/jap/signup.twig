          <div class="page-title mb-5"><h1>SIGNUP</h1></div>

<div class="row justify-content-center">
  <div class="col-lg-10">
            
    <div class="reg-form">
      <form action="/signup" method="post">
        <div class="row">
          <div class="col-sm-12"><input type="text" class="form-control" placeholder="USERNAME" id="username" value="{{ data['username'] }}" name="username"></div>
                    <div class="col-sm-12"><input type="text" class="form-control" placeholder="NAME" id="name" value="{{ data['name'] }}" name="name"></div>
                    <div class="col-sm-12"><input type="email" class="form-control" placeholder="EMAIL" id="email" value="{{ data['email'] }}" name="email"></div>
                    <div class="col-sm-12"><input type="number" class="form-control" placeholder="TELEPHONE" id="telephone" value="{{ data['telephone'] }}" name="telephone"></div>
                    <div class="col-sm-6"><input type="password" class="form-control" placeholder="PASSWORD" id="password" name="password"></div>
          <div class="col-sm-6"><input type="password" class="form-control" placeholder="CONFIRM PASSWORD" id="confirm" name="password_again"></div>
          {% if captcha %}
          <div class="col-sm-12">
                    <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
            </div>
          {% endif %}
                  </div>
                  <div class="checkbox">
            <label>
              <input type="checkbox" name="terms" value="1"> {{ lang['signup.accept_terms_text'] }}
            </label>
          </div>
        <div class="mt-3"><input type="submit" class="btn btn-primary btn-block" value="SIGNUP NOW"></div>
      </form>
    </div>
  </div>
</div>

{% include 'header.twig' %}
<div id="content-wrap">
<div class="section">
<div class="container collapse-view">
    <div class="text-content">
              <div class="row">
                <div class="col-6 mb-2">You are currently on:   <strong>Services</strong></div>
                <div class="col-6 mb-2">Welcome,   <strong>{{ user['username'] }}</strong>! Your balance is <strong>{% if settings['site_currency'] == "TRY" %}{{ "&#8378;" }}
                {% elseif settings['site_currency'] == "USD" %}{{ "&#36;" }}
                {% else %}{{ "₹" }}
                {% endif %}{{ user['balance'] }}</strong></div>
              </div>
              </div>
            </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="service-table">
        <div class="service-head clearfix">
            <div class="search-bar">
      <div class="row">
        <div class="col-sm-6"><input type="text" id="search" class="form-control" placeholder=""></div>
        <div class="col-sm-6">
          <a href="#" role="button" id="service-filter" style="padding: 10px 0;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-primary btn-block">SERVICES FILTER<i class="fas fa-chevron-circle-up"></i></a>
          <div class="dropdown-menu setting" aria-labelledby="dropdownSetting">
            <a class="dropdown-item" href="javascript:filterService('All')">All</a>
                        <a class="dropdown-item" href="javascript:filterService('Fav')">My Favorite</a>
                                      <a class="dropdown-item" href="javascript:filterService('♛ Instagram TOP Services [JAP EXCLUSIVE]')">♛ Instagram TOP Services [JAP EXCLUSIVE]</a>  
                          <a class="dropdown-item" href="javascript:filterService('♛ Instagram Comments [VERIFIED/TOP ACCOUNTS]')">♛ Instagram Comments [VERIFIED/TOP ACCOUNTS]</a>  
                          <a class="dropdown-item" href="javascript:filterService('♛ Instagram Likes')">♛ Instagram Likes</a>  
                          <a class="dropdown-item" href="javascript:filterService('♛ Reviews')">♛ Reviews</a>  
                      </div>
        </div>
      </div>
    </div>
  </div>
        {% if site['service_speed'] == 2 %}
          <div class="top justify-content-center text-center">
            <span class="list">
              <span class="">
              <span style="color: #f24236;font-weight: 500; font-size:10px;" class="fa fa-arrow-down"></span>
              <span style="color: #f24236;font-weight: 500; font-size:10px;">: {{ lang['services.speed.veryslow'] }}</span></span>
              <span class="ml-4x">
              <span style="color: #fe6d86;font-weight: 500; font-size:10px;" class="fa fa-arrow-down"></span>
              <span style="color: #fe6d86;font-weight: 500; font-size:10px;">: {{ lang['services.speed.slow'] }}</span></span>
              <span class="ml-4x">
              <span style="color: #5696c9;font-weight: 500; font-size:10px;" class="fa fa-compress"></span>
              <span style="color: #5696c9;font-weight: 500; font-size:10px;">: {{ lang['services.speed.normal'] }}</span></span>
              <span class="ml-4x">
              <span style="color: #0dd887;font-weight: 500; font-size:10px;" class="fa fa-arrow-up"></span>
              <span style="color: #0dd887;font-weight: 500; font-size:10px;">: {{ lang['services.speed.fast'] }}</span></span>
            </span>
          </div>
        {% endif %}
        <div class="table-responsive">
        <table class="table " id="service-table">
          <thead>
          <tr>
            <th class="text-center">{{ lang['services.id'] }}</th>
            <th>{{ lang['services.name'] }}</th>
            <th class="text-center">{{ lang['services.price'] }}</th>
            <th class="text-center">{{ lang['services.min'] }}</th>
            <th class="text-center">{{ lang['services.max'] }}</th>
          </tr>
          </thead>
          <tbody>
              {% for category in serviceCategory %}
                <tr data-category="{{ category["category_name"] }}" class="category">
                    <td colspan="7" class="comment-td text-center">{{ category["category_name"] }}</td>
                </tr>
                {% for service in category['services'] %}
                  <tr data-category="{{ category["category_name"] }}" class="service">
                    <td class="text-center">
                      <span class="fav" data-id="{{ service["service_id"] }}">
                        <i class="far fa-star"></i> 
                      </span>
                      <span class="notif" data-id="{{ service["service_id"] }}">
                        <i class="far fa-bell-slash"></i> 
                      </span>
                                {{ service["service_id"] }}
                    </td>
                    <td>{{ service["service_name"] }}</td>
                    <td class="text-center">{{ service["service_price"] }}</td>
                    <td class="text-center">{{ service["service_min"] }}</td>
                    <td class="text-center">{{ service["service_max"] }}</td>
                  </tr>
                {% endfor %}
              {% endfor %}

          </tbody>
        </table>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>


{% include 'footer.twig' %}
